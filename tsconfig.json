{
    "compilerOptions": {
        "module": "ES2020",
        "lib": [
            "ES6"
        ],
        "types": [
            "node"
        ],
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "alwaysStrict": true,
        "checkJs": false,
        "diagnostics": false,
        "sourceMap": false,
        "outDir": "./dist",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "importHelpers": true,
        "noImplicitAny": false,
        "strictBindCallApply": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": false,
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "esModuleInterop": true,
        "strict": true,
    },
    "exclude": [
        "./node_modules",
        "./docs",
        "./dist",
    ],
    "include": [
        "src/**/*",
        "src/templates/packages/**/*",
        "src/templates/packages/**/model/*"
    ]
}